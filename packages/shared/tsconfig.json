{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist"
  }
}
